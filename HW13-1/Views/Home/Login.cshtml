@using HW13_1.Entities;
@model LoginDTO;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Login</title>
</head>
<body>
    
    <section class="vh-100" style="background:linear-gradient(135deg, #172a74, #21a9af);
    background-color: #184e8e;">
    <div class="container py-5 h-150">
      <div class="row d-flex justify-content-center align-items-center h-150">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
                  
                @if (ViewData["ShowAlert"] == "1")
              {
                <div class="alert alert-primary" role="alert">
                  @ViewData["AlertMessage"].ToString();
                </div>
              }
              <form asp-action="Login" asp-controller="Home" method="post">
              <h3 class="mb-5">Sign in</h3>
  
              <div class="form-outline mb-4">
                <input type="email" name="Email" class="form-control form-control-lg" asp-for="Email" />
                <label class="form-label" asp-for="Email">Email</label>
              </div>
  
              <div class="form-outline mb-4">
                <input type="password" name="Password" class="form-control form-control-lg"  asp-for="Password" />
                <label class="form-label"  asp-for="Password" >Password</label>
              </div>

              <button class="btn btn-primary btn-lg btn-block">Login</button>
               </form>
              <br><br>
              <p>Not registered? <a asp-action="Register" asp-controller="Home">Creat an account</a></P>
              </div>    
            </div>
          </div>
        </div>
      </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
